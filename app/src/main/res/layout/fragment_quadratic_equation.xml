<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.playground.dkkovalev.networksolver.LinearEquationTab"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/button_send_quadratic_data"
            android:layout_marginLeft="40dp"
            android:layout_alignBaseline="@+id/et_quadratic_b"
            android:layout_alignBottom="@+id/et_quadratic_b"
            android:layout_toRightOf="@+id/et_quadratic_a"
            android:layout_toEndOf="@+id/et_quadratic_a"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ax^2+bx+c"
            android:id="@+id/tv_quadratic_response"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="43dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/et_quadratic_a"
            android:hint="a"
            android:layout_below="@+id/tv_quadratic_response"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp"
            android:text="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/et_quadratic_b"
            android:layout_below="@+id/et_quadratic_a"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/et_quadratic_a"
            android:layout_alignEnd="@+id/et_quadratic_a"
            android:hint="b"
            android:text="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/et_quadratic_c"
            android:layout_below="@+id/et_quadratic_b"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/et_quadratic_b"
            android:layout_alignEnd="@+id/et_quadratic_b"
            android:hint="c"
            android:text="0" />

    </RelativeLayout>

</LinearLayout>
